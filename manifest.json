{
  "manifest_version": 3,
  "name": "LinkedIn Auto Connect",
  "version": "1.0",
  "description": "Automatically send connection requests on LinkedIn search pages.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
 
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ]
}
